@model Mission06_Shumway.Models.Submission

@{
    ViewData["Title"] = "Add Movie";
}

<div class="container mt-4" style="max-width: 600px;">
    <h2>Add Movie</h2>

    <form asp-action="AddMovie" method="post">

        <div class="mb-2">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control form-control-sm" required />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control form-control-sm" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Year"></label>
            <input asp-for="Year" type="number" min="1888" max="2100" class="form-control form-control-sm" required />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Director"></label>
            <input asp-for="Director" class="form-control form-control-sm" required />
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Rating"></label>
            <select asp-for="Rating" class="form-select form-select-sm" required>
                <option value="">Select</option>
                <option>G</option>
                <option>PG</option>
                <option>PG-13</option>
                <option>R</option>
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Edited"></label>
            <select asp-for="Edited" class="form-select form-select-sm">
                <option value="">Select</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div class="mb-2">
            <label asp-for="LentTo">Lent To</label>
            <input asp-for="LentTo" class="form-control form-control-sm" />
        </div>

        <div class="mb-3">
            <label asp-for="Notes"></label>
            <input asp-for="Notes" maxlength="25" class="form-control form-control-sm" />
            <small class="text-muted">Max 25 characters</small>
        </div>

        <button type="submit" class="btn btn-primary btn-sm">Add Movie</button>
    </form>
</div>
