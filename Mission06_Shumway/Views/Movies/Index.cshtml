<!-- Page for viewing movie list -->

@model IEnumerable<Mission06_Shumway.Models.Generated.Movie>

@{
    ViewData["Title"] = "Movie Collection";
}
<h1 class="mb-3">Movie Collection</h1>

<a class="btn btn-primary mb-3" asp-action="Create">+ Add Movie</a>

<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Copied To Plex</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Title</td>
            <td>@m.Year</td>
            <td>@m.Director</td>
            <td>@m.Rating</td>
            <!-- Turn 1's and 0's to Yes/No-->
            <td>@(m.Edited == 1 ? "Yes" : "No")</td>
            <td>@(m.CopiedToPlex == 1 ? "Yes" : "No")</td>
            <td class="text-nowrap">
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@m.MovieId">Edit</a>
                <a class="btn btn-sm btn-secondary" asp-action="Delete" asp-route-id="@m.MovieId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>